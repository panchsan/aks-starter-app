@model List<Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1 class="bg-info text-white">Movies</h1>
<a asp-action="Create" class="btn btn-secondary mb-2">Create a Movie</a>
<br />
<table class="table table-sm table-bordered">
    <tr>
        @* <th class="col-2">Id</th> *@
        <th class="col-5">Name</th>
        <th class="col-5">Actors</th>
        <th class ="col-1">Action</th>
        <th class="col-1">Action</th>
    </tr>
    @foreach (Movie m in Model)
    {
        <tr>
            @* <td>@m.Id</td> *@
            <td>@m.Name</td>
            <td>@m.Actors</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@m.Id">
                    Update
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@m.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>